<% include layout/header%>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">			
	<div class="row">
		<ol class="breadcrumb">
			<li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
			<li class="active">Danh sách sản phẩm</li>
		</ol>
	</div><!--/.row-->
	
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Danh sách sản phẩm</h1>
		</div>
	</div><!--/.row-->
	<div id="toolbar" class="btn-group">
		<a href="/admin/product/add" class="btn btn-success">
			<i class="glyphicon glyphicon-plus"></i> Thêm sản phẩm
		</a>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<table 
						data-toolbar="#toolbar"
						data-toggle="table">

						<thead>
						<tr>
			
							<th data-field="name"  data-sortable="true">Tên sản phẩm</th>
							<th data-field="price" data-sortable="true">Tên khách hàng</th>
							<th>SĐT</th>
							<th>Địa chỉ</th>
							<th>Email</th>
							<th>Hành động</th>
						</tr>
						</thead>
						<tbody>
							<%for(key in data){%>
							<tr>
							
								<td ><%=data[key].prd_name%></td>
								<td ><%=data[key].name%></td>
								<td style="text-align: center"><%=data[key].phone%></td>
								<td><%=data[key].address%></td>
								<td><%=data[key].mail%></td>
								<td class="form-group">
							
									<a href="/user/order/del/<%=data[key]._id%>" class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
								</td>
							</tr>
							<%}%>
						</tbody>
					</table>
				</div>
				
			</div>
		</div>
	</div><!--/.row-->	
</div>	<!--/.main-->

<script src="/static/theme/admin/js/jquery-1.11.1.min.js"></script>
<script src="/static/theme/admin/js/bootstrap.min.js"></script>
<script src="/static/theme/admin/js/bootstrap-table.js"></script>	

<% include layout/footer%>