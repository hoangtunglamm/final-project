<% include layout/header%>
                
                <!--	List Product	-->
                <div class="products">
                
                    <%for(key in data){%>               
                        <%if(start ==1){%>
                            <div class="product-list card-deck">     
                        <%}%>    
                        <div class="product-item card text-center">
                            <a href="/product/<%=data[key]._id%>"><img src="/static/<%=data[key].prd_image%>"></a>
                            <h4><a href="/product/<%=data[key]._id%>"><%=data[key].prd_name%></a></h4>
                            <p>Giá Bán: <span><%=data[key].prd_price%></span></p>
                        </div>
                        <%if(start ==3){%>
                    </div>
                    <%start=0}start++%>
                    <%}%>

                    <%if(rows%3!=0){%>
                    </div>
                    <%}%>
                </div>
